<%= simple_form_for(@subscription) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :stripe_customer_token %>
    <%= f.input :state %>
    <%= f.association :user, label_method: :id %>
    <%= f.input :stripe_plan_id %>
    <%= f.input :amount %>
    <%= f.input :period %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
